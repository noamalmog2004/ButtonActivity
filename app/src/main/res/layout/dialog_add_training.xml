<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Build Your Training"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/tvTitle"
        android:layout_marginTop="30dp"
        />

    <EditText
        android:id="@+id/etDay"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:hint="Enter Day of month"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/etMonth"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/etDay"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:hint="Enter Month"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/etYear"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/etMonth"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:hint="Enter year"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/id1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/etYear"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:hint="Enter id of 1. training"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

        />

    <EditText
        android:id="@+id/id2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/id1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        android:hint="Enter id of 2. training"
        android:textColorHint="@color/black" />

    />
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/id2"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:hint="Enter id of 3. training"

        android:id="@+id/id3"/>

    <EditText
        android:id="@+id/id4"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/id3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:hint="Enter id of 4. training"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    />
    />

    <Button
        android:id="@+id/btnSaveTraining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="save" />
</RelativeLayout>
</ScrollView>