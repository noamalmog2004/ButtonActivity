<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0000FF"
    android:padding="16dp">

    <ImageView
        android:id="@+id/profile_picture"
        android:layout_width="164dp"
        android:layout_height="155dp"
        android:layout_gravity="center"
        android:src="@drawable/profile2" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="My name"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:paddingTop="30dp"/>

    <TextView
        android:id="@+id/tvAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="30dp"
        android:text="My age"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

<!--    <TextView-->
<!--        android:id="@+id/tvHeight"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_gravity="center"-->
<!--        android:text="My height"-->
<!--        android:textColor="#FFFFFF"-->
<!--        android:textSize="20sp"-->
<!--        android:paddingTop="30dp"/>-->

    <TextView
        android:id="@+id/tvWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="My weight"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:paddingTop="30dp"/>
    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="My email"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:paddingTop="30dp"/>
    <TextView
        android:id="@+id/tvPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="My password"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:paddingTop="30dp"
        android:password="true"
        android:paddingBottom="20dp"/>


    <Button
        android:id="@+id/btnChangeGallery"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="Choose new pic from Gallery"
        />
    <Button
        android:id="@+id/btnChangeCamera"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="Open Camera "
        />
    <Button
        android:id="@+id/btnSaveNew"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="Save New Pic"
        />
</LinearLayout>



